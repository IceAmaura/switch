{
  "name": "switch",
  "version": "1.0.0",
  "description": "Switch between your favourite apps lightnen fast",
  "main": "build/switch.js",
  "scripts": {
    "watch-ts": "tsc -w",
    "dev": "concurrently \"npm:watch-ts\" \"nodemon ./build/switch.js\"",
    "build": "tsc  && pkg build/switch.js --output bin/switch --targets node10-win-x64,node10-linux-x64,node10-macos-x64  && node post-build.js"
  },
  "bin": "$DIR/node_modules/npm/cli.js",
  "author": "Victor Aremu",
  "license": "",
  "dependencies": {
    "check-caps": "^1.0.3",
    "iohook": "^0.6.1",
    "node-ipc": "^9.1.1",
    "node-notifier": "^5.4.1",
    "node-window-manager": "^1.0.4",
    "open": "^6.4.0",
    "robotjs": "^0.5.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "nodemon": "^1.15.1",
    "typescript": "^3.5.3"
  }
}
