{
  "name": "switch",
  "version": "1.0.0",
  "description": "Switch between your favourite apps lightning fast (Windows, MacOS)",
  "main": "build/switch.js",
  "scripts": {
    "watch-ts": "tsc -w",
    "dev": "concurrently \"npm:watch-ts\" \"nodemon ./build/switch.js --dev\"",
    "start": "concurrently \"npm:watch-ts\" \"nodemon ./build/switch.js\"",
    "build": "tsc  && pkg . --output bin/switch --targets node10-win-x64,node10-linux-x64,node10-macos-x64  && node post-build.js"
  },
  "bin": "build/switch.js",
  "author": "Victor Aremu",
  "license": "",
  "dependencies": {
    "conf": "^5.0.0",
    "iohook": "^0.6.1",
    "node-ipc": "^9.1.1",
    "node-notifier": "^5.4.1",
    "node-window-manager": "^1.0.4",
    "open": "^6.4.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "nodemon": "^1.19.1",
    "typescript": "^3.5.3"
  }
}
